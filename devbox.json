{
  "packages": [
    "python3@latest",
    "poetry@latest",
  ],
  "shell": {
    "init_hook": [
      "make",
      "export PATH=$(pwd)/.pulumi/bin:$PATH",
      "rm -Rf ./venv/ && python -m venv ./venv && source ./venv/bin/activate && poetry install"
    ],
    "scripts": {
      "test": [
        "echo \"Error: no test specified\" && exit 1"
      ]
    }
  }
}
